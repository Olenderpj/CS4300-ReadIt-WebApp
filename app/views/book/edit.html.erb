<html>
    <head>
        <title><%= @page_title or "Add a Book" %></title>

        <!---- import stylesheet content here----->
        <%= stylesheet_link_tag 'books'%>
        <meta name="viewport" content="width=device-width, initial-scale=1">

    </head>



    <!--- Render content using the base index---->
    <% content_for :main_content do %>
        <form>
            <p>
                <h1>Edit Book</h1>
            
                </body>
                        </form>
                            <%= form_for @book, :url =>{:action => "update", :id => @book} do |b| %>
                                <p>
                                    <label for = "title">Title&colon;</label> 
                                    <%= b.text_field 'title', id: "title" %>
                                </p>

                                <p>
                                    <label for = "author">Author&colon;</label>
                                    <%= b.text_field 'author', id: "author" %>
                                </p>

                               <p>
                                    <label for = "description">Description&colon;</label>
                                    <%= b.text_field 'description', id: "description" %>
                                </p>

                               <p>
                                    <label for = "genre">Genre&colon;</label>
                                    <%= b.text_field 'genre', id: "genre" %>
                                </p>

                               <p>
                                    <label for = "totalPage">Total Page&colon;</label>
                                    <%= b.number_field 'totalPage', id: "totalPage" %>
                                </p>

                               <p>
                                    <label for = "readPage">Page Read&colon;</label>
                                    <%= b.number_field 'readPage', id: "readPage" %>
                                </p>
                                
                               <p>
                                    <label for = "isRead">Already Read It</label>
                                    <%= b.check_box 'isRead', id: "isRead" %>
                                </p>

                               <p>
                                    <label for = "isInReadingList">Is in Reading List</label>
                                    <%= b.check_box 'isInReadingList', id: "isInReadingList" %>
                                </p>

                               <p>
                                    <label for = "isInPersonalLibraryList">Is in Personal Library List</label>
                                    <%= b.check_box 'isInPersonalLibraryList', id: "isInPersonalLibraryList" %>
                                </p>

                                

                                <%= submit_tag "Update", id: "Update" %>
                            <% end -%>
                        </form>
                    </body>
            <%= link_to 'Back to Home', :back, id: 'back-to-home' %>   
            </p> 
        </form>
        <p><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-backspace-reverse-fill" viewBox="0 0 16 16">
                    <path d="M0 3a2 2 0 0 1 2-2h7.08a2 2 0 0 1 1.519.698l4.843 5.651a1 1 0 0 1 0 1.302L10.6 14.3a2 2 0 0 1-1.52.7H2a2 2 0 0 1-2-2V3zm9.854 2.854a.5.5 0 0 0-.708-.708L7 7.293 4.854 5.146a.5.5 0 1 0-.708.708L6.293 8l-2.147 2.146a.5.5 0 0 0 .708.708L7 8.707l2.146 2.147a.5.5 0 0 0 .708-.708L7.707 8l2.147-2.146z"/>
                  </svg><strong><i>Remove Tags:</i></strong></p><p><%= render @book.tags %></p>
        <% end %>
        <%= render template: "base" %>
</html> 
