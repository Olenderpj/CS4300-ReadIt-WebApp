<head>
  <!---- import stylesheet content here ----->
  <%= stylesheet_link_tag 'registration'%>
</head>


  <div class="container">
    <div class="card mb-3">
      <div class="row g-0">
        <div class="col-md-4">
          <img id="login-image" src="https://media.wired.com/photos/5be4cd03db23f3775e466767/master/pass/books-521812297.jpg" class="img-fluid rounded" alt="Placeholder Image">
        </div>
        
        <div class="col-md-8">
        <h3 class="card-title">Register</h3>
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <% f.label :email %><br />
                <%= f.email_field :email, autofocus: true, class:"form-control", autocomplete: "email", placeholder:"Email Address" %>
              </div>

              <div class="field">
                <% f.label :firstName %><br />
                <%= f.text_field :firstName, autofocus: true, class:"form-control", autocomplete: "firstName", placeholder:"First Name" %>
              </div>

              <div class="field">
                <% f.label :lastName %><br />
                <%= f.text_field :lastName, autofocus: true, class:"form-control", autocomplete: "lastName", placeholder:"Last Name" %>
              </div>

              <div class="field">
                <% f.label :birthMonth %><br />
                <%= f.text_field :birthMonth, autofocus: true, class:"form-control", autocomplete: "birthMonth", placeholder:"Birth Month" %>
              </div>

              <div class="field">
                <% f.label :birthDay %><br />
                <%= f.text_field :birthDay, autofocus: true, class:"form-control", autocomplete: "birthDay", placeholder:"Birth Day" %>
              </div>

              <div class="field">
                <% f.label :birthYear %><br />
                <%= f.text_field :birthYear, autofocus: true, class:"form-control", autocomplete: "birthYear", placeholder:"Birth Year" %>
              </div>

              <div class="field">
                <% f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Password" %>
              </div>

              <div class="confirm-field", >
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirm Password" %>
              </div>

              <!--Options-->
              <div class="sign-in-options">
                  <div id="first-option" class="d-flex sign-in">
                      <a id="register" class="justify-content-end" href="/forgot_password"> Existing User? </a>
                  </div>

                  <div class="d-flex sign-in">
                      <%= f.submit "Sign Up", :class => "btn btn-primary"%>
                      <a id="home" class="justify-content-end btn btn-secondary" href='/'>Home</a>
                  </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
    </div>
</div>
